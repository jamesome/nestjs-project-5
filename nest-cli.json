{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      "database/migration/*"
    ],
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true
  }
}
