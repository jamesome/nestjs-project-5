{
  // https://codingapple.com/unit/typescript-tsconfig-json/
  "compilerOptions": {
    "module": "commonjs", // 무슨 import 문법 쓸건지 'commonjs', 'amd', 'es2015', 'esnext'
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true, // 컴파일시 주석제거
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist", // js파일 아웃풋 경로바꾸기
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    // "strict": true, // strict 관련, noimplicit 어쩌구 관련 모드 전부 켜기
    // "strictPropertyInitialization": true, //class constructor 작성시 타입체크 강하게
    "noImplicitAny": true, // any타입 금지 여부
    "strictNullChecks": true, // null, undefined 타입에 이상한 짓 할시 ERROR
    "strictFunctionTypes": false, // 함수파라미터 타입체크 강하게
    "noImplicitThis": true, // this 키워드가 any 타입일 경우 ERROR
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noUnusedLocals": false, // 쓰지않는 지역변수 있으면 ERROR
    "noUnusedParameters": false, // 쓰지않는 파라미터 있으면 ERROR
    "noImplicitReturns": true, // 함수에서 return 빼먹으면 ERROR
    "noFallthroughCasesInSwitch": true // switch문 이상하면 ERROR
  }
}
